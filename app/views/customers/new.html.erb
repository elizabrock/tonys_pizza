<h1>Add A New Customer</h1>
<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= errors_for(@customer, :name) %>
  <%= f.label :phone, "Phone Number" %>
  <%= f.text_field :phone %>
  <%= errors_for(@customer, :phone) %>
  <%= f.submit "Create Customer" %>
<% end %>
