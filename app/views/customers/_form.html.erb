<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= errors_for(@customer, :name) %>
  <%= f.text_field :name %>
  <%= f.label :phone, "Phone Number" %>
  <%= errors_for(@customer, :phone) %>
  <%= f.text_field :phone %>
  <% submit_text = (@customer.new_record? ? "Create Customer" : "Save Changes") %>
  <%= f.submit submit_text %>
<% end %>
