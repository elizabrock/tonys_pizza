<%= link_to "Add New Item", new_menu_item_path, class: "button right" %>
<h1>Menu Items</h1>

<% if @menu_items.empty? -%>
  <p>There are no menu items.</p>
<% else -%>
  <section class="sort">
    <h3>Sort By:</h3>
    <%- if @sort_order == 'name' %>
      <span class="active">Name</span>
      <%= link_to "Price", menu_items_path(sort: 'price'), class: "inactive" %>
    <%- else %>
      <%= link_to "Name", menu_items_path(sort: 'name'), class: "inactive" %>
      <span class="active">Price</span>
    <%- end %>
  </section>
  <ul id="menu_items">
    <%- @menu_items.each do |menu_item| %>
      <li>
        <%= link_to edit_menu_item_path(menu_item) do -%>
          <img src="<%= menu_item.image_path -%>" alt="<%= menu_item.name -%>" />
          <span class="name"><%= menu_item.name %></span>
          <span class="price"><%= number_to_currency(menu_item.price) %></span>
        <%- end -%>
      </li>
    <%- end -%>
  </ul>
<% end -%>
