<article class="order">
  <%= link_to "Edit Order", edit_order_path(@order), class: "button right" %>
  <h1><%= @order.customer.name %></h1>

  <h4>Delivery Time:</h4>
  <p><%= @order.delivery_time.to_s(:long) %></p>

  <h4>Address:</h4>
  <p><%= @order.location %></p>

  <h4>Customer Phone:</h4>
  <p><%= number_to_phone(@order.customer.phone, area_code: true) %></p>

  <h4>Notes:</h4>
  <p><%= @order.notes %></p>

  <h2>Order Details</h2>
  <% if @order.order_items.empty? %>
    <p>There are no items in this order.</p>
  <% else %>
    <ul id="order_items">
      <% @order.order_items.each do |order_item| %>
        <li>
          <% menu_item = order_item.menu_item %>
          <img src="<%= menu_item.image_path -%>" alt="<%= menu_item.name -%>" />
          <span class=""><%= menu_item.name %></span>
          <span class="menu_item_price"><%= number_to_currency(menu_item.price) %></span>
          <span class="line_quantity"><%= order_item.quantity %></span>
          <span class="line_total"><%= number_to_currency(order_item.total) %></span>
        </li>
      <% end %>
    </ul>
  <% end -%>
  <%= link_to "Add to Order", new_order_order_items_path(@order), class: "button" %>
</order>
