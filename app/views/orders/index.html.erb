<%= link_to "Add New Order", new_order_path, class: "button right" %>
<h1>Catering Orders</h1>
<%- if @orders.empty? -%>
  <p>There are no orders.</p>
<% else -%>
  <ul id="orders">
    <%- @orders.each do |order| %>
      <li><%= link_to "#{order.delivery_time.to_s(:long)}, #{order.customer.name}", order_path(order) %></li>
    <%- end -%>
  </ul>
<%- end -%>
